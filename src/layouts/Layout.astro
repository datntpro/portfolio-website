---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Portfolio của Ngô Tiến Đạt - Security Engineer" } = Astro.props;
const currentPath = Astro.url.pathname;
---

<!doctype html>
<html lang="vi">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- SEO -->
    <meta name="keywords" content="security engineer, security operations, PAM, WAF, XDR, vulnerability analysis, devsecops, security tools" />
    <meta name="author" content="Ngô Tiến Đạt" />
    
    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    
    <!-- Netlify Identity Widget -->
    <script src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>
    
    <title>{title}</title>
  </head>
  <body class="bg-slate-950 text-white min-h-screen">
    <!-- Navigation -->
    <nav class="fixed top-0 w-full bg-slate-950/80 backdrop-blur-lg border-b border-slate-800 z-50">
      <div class="container mx-auto px-4 py-4">
        <div class="flex items-center justify-between">
          <a href="/" class="text-xl font-bold bg-gradient-to-r from-cyan-400 to-blue-500 bg-clip-text text-transparent">
            Ngô Tiến Đạt
          </a>
          
          <div class="hidden md:flex items-center gap-8">
            <a href="/" class={`hover:text-cyan-400 transition-colors ${currentPath === '/' ? 'text-cyan-400' : ''}`}>
              Trang chủ
            </a>
            <a href="/projects" class={`hover:text-cyan-400 transition-colors ${currentPath.startsWith('/projects') ? 'text-cyan-400' : ''}`}>
              Dự án
            </a>
            <a href="/blog" class={`hover:text-cyan-400 transition-colors ${currentPath.startsWith('/blog') ? 'text-cyan-400' : ''}`}>
              Blog
            </a>
            <a href="/contact" class={`hover:text-cyan-400 transition-colors ${currentPath === '/contact' ? 'text-cyan-400' : ''}`}>
              Liên hệ
            </a>
          </div>

          <!-- Mobile menu button -->
          <button id="mobile-menu-button" class="md:hidden">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          </button>
        </div>

        <!-- Mobile menu -->
        <div id="mobile-menu" class="hidden md:hidden mt-4 pb-4 space-y-4">
          <a href="/" class="block hover:text-cyan-400 transition-colors">Trang chủ</a>
          <a href="/projects" class="block hover:text-cyan-400 transition-colors">Dự án</a>
          <a href="/blog" class="block hover:text-cyan-400 transition-colors">Blog</a>
          <a href="/contact" class="block hover:text-cyan-400 transition-colors">Liên hệ</a>
        </div>
      </div>
    </nav>

    <!-- Main content -->
    <main class="pt-20">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="border-t border-slate-800 mt-20">
      <div class="container mx-auto px-4 py-12">
        <div class="grid md:grid-cols-3 gap-8">
          <div>
            <h3 class="text-xl font-bold mb-4 bg-gradient-to-r from-cyan-400 to-blue-500 bg-clip-text text-transparent">
              Ngô Tiến Đạt
            </h3>
            <p class="text-gray-400">
              Security Engineer
            </p>
          </div>
          
          <div>
            <h4 class="font-semibold mb-4">Quick Links</h4>
            <div class="space-y-2 text-gray-400">
              <a href="/" class="block hover:text-cyan-400 transition-colors">Trang chủ</a>
              <a href="/projects" class="block hover:text-cyan-400 transition-colors">Dự án</a>
              <a href="/blog" class="block hover:text-cyan-400 transition-colors">Blog</a>
              <a href="/contact" class="block hover:text-cyan-400 transition-colors">Liên hệ</a>
            </div>
          </div>
          
          <div>
            <h4 class="font-semibold mb-4">Connect</h4>
            <div class="flex gap-4">
              <a href="https://github.com/datntpro" target="_blank" class="text-gray-400 hover:text-cyan-400 transition-colors">
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
              </a>
              <a href="https://linkedin.com/in/datngotien" target="_blank" class="text-gray-400 hover:text-cyan-400 transition-colors">
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                </svg>
              </a>
            </div>
          </div>
        </div>
        
        <div class="border-t border-slate-800 mt-8 pt-8 text-center text-gray-400 text-sm">
          <p>&copy; {new Date().getFullYear()} Ngô Tiến Đạt. All rights reserved.</p>
        </div>
      </div>
    </footer>

    <!-- Scroll to top -->
    <button id="scrollToTop" class="fixed bottom-8 right-8 bg-gradient-to-r from-cyan-600 to-blue-600 hover:from-cyan-700 hover:to-blue-700 text-white p-3 rounded-full shadow-lg opacity-0 transition-opacity duration-300 z-50">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18"></path>
      </svg>
    </button>

    <script>
      // Mobile menu toggle
      const mobileMenuButton = document.getElementById('mobile-menu-button');
      const mobileMenu = document.getElementById('mobile-menu');
      
      mobileMenuButton?.addEventListener('click', () => {
        mobileMenu?.classList.toggle('hidden');
      });

      // Scroll to top
      const scrollBtn = document.getElementById('scrollToTop');
      
      window.addEventListener('scroll', () => {
        if (window.scrollY > 300) {
          scrollBtn?.classList.remove('opacity-0');
          scrollBtn?.classList.add('opacity-100');
        } else {
          scrollBtn?.classList.remove('opacity-100');
          scrollBtn?.classList.add('opacity-0');
        }
      });
      
      scrollBtn?.addEventListener('click', () => {
        window.scrollTo({ top: 0, behavior: 'smooth' });
      });
    </script>

    <!-- Netlify Identity Redirect -->
    <script>
      if (window.netlifyIdentity) {
        window.netlifyIdentity.on("init", user => {
          if (!user) {
            window.netlifyIdentity.on("login", () => {
              document.location.href = "/admin/";
            });
          }
        });
      }
    </script>
  </body>
</html>
